<div class="modal-form-container">
    <div class="row h-100">
        <div class="col mx-auto h-100">
            <div class="card-modal">

                <div class="card col-lg-7 col-md-8 py-4">
                    {#Modal closer#}
                    <span class="close-modal">x</span>

                    <div class="card-header border-0 mb-3 py-0 text-center">
                        <h1 class="text-black-50">{{ (author is defined)?"Modifier l'auteur "~author.authorName:"Nouvel auteur" }}</h1>
                    </div>

                    <form role="form" action="{{ url('digital_blog_author_store') }}" method="post" class="ajax_form" enctype="multipart/form-data">

                        <input value="{{ (author is defined)?author.uniqKey:"" }}" name="author_id" type="hidden">

                        <div class="row">
                            <div class="col-lg-5">
                                <div class="form-group">
                                    <label for="profile_picture"
                                           class="trombino-label file-image editable {{ (author is defined and author.profilePicture)?'loaded':'' }}"
                                           style="height: 180px;width: 180px;">
                                        <div class="spinner-border text-primary mx-auto loader" role="status">
                                            <span class="sr-only">Loading...</span>
                                        </div>
                                        <div class="previewer full" style="background-color: rgba(246,246,250,0.4);">
                                            <img class="d-block mx-auto"
                                                 src="{{ (author is defined and author.profilePicture)?asset(twig_p_author_image_path ~ author.profilePicture):"" }}">
                                        </div>
                                        <span class="label-text">Photo de profile</span>
                                        <span class="label-front">Modifier la Photo de profile</span>
                                        <input type="file" name="profile_picture" id="profile_picture"
                                               accept=".jpg, .png, .jpeg, .webp"
                                               class="hidden-input">
                                    </label>
                                </div>

                                <div class="form-group">
                                    <input type="checkbox"  name="can_publish" id="can_publish"
                                            {{ (author is defined and author.canPublish)?'checked':'' }}>
                                    <label for="can_publish">{{ "Peut publier des articles"|trans }}</label>
                                </div>

                                <div class="form-group">
                                    <label for="description">A propos</label>
                                    <textarea id="description" class="form-control" rows="5" placeholder="Description" name="description">{{ (author is defined)?author.description:"" }}</textarea>
                                </div>
                            </div>
                            <div class="col-lg-7">
                                <div class="form-group">
                                    <label for="author_name">{{ "Nom d'auteur"|trans }}</label>
                                    <input class="form-control" value="{{ (author is defined)?author.authorName:"" }}"
                                           placeholder="SamuelBekon" id="author_name" name="author_name" type="text">
                                </div>
                                <div class="form-group">
                                    <label for="last_name">{{ "Nom"|trans }}</label>
                                    <input class="form-control" value="{{ (author is defined)?author.lastName:"" }}"
                                           placeholder="Bekon" required id="last_name" name="last_name" type="text">
                                </div>
                                <div class="form-group">
                                    <label for="first_name">{{ "Pr√©nom"|trans }}</label>
                                    <input class="form-control" value="{{ (author is defined)?author.firstName:"" }}"
                                           placeholder="Samuel" required id="first_name" name="first_name" type="text">
                                </div>
                                <div class="form-group">
                                    <label for="email">{{ "Email"|trans }}</label>
                                    <input class="form-control" required value="{{ (author is defined)?author.email:"" }}"
                                           placeholder="example@gmail.com" id="email" name="email" type="text">
                                </div>

                                <div class="text-center">
                                    <div class="form-response"></div>
                                    <button type="submit" class="btn btn-outline-theme-primary mt-4 btn-submit">Enregistrer</button>
                                    <div class="loader mx-auto my-3 d-none"></div>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>