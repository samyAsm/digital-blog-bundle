<script type="application/javascript">

    $(document).ready(function () {

        console.log("Dhi blog bundle")

        $('.datatable').each(function () {
            let table = $(this);

            let datatable = $(this).DataTable({
                "pagingType": "numbers",
                "lengthMenu": [15, 25, 50, "All"]
            });

            table.find('thead th').append('<input type="text">');

            table.find('thead th input').each(function () {

                let t = $(this).parent().text();

                $(this).attr('placeholder', t).css('width', $(this).parent().width() + 10)

                $(this).parent().html($(this))

                $(this).on('click', function (e) {
                    e.stopPropagation()
                }).on('keyup', function () {
                    datatable.search($(this).val()).draw();
                });
            })

        })

    })

</script>